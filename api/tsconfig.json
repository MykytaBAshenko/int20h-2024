{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": false,
    "strictNullChecks": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleDetection": "force"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
